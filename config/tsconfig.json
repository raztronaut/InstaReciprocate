{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "rootDir": "../src",
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "../dist-extension"
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.js",
    "../src/**/*.jsx"
  ],
  "exclude": ["../node_modules"]
}
